.picture image{
  width: 100%;
  height: 200px;
  background-color: greenyellow;
}
.text{
  width: 88%;
  height: 53.5px;
  margin: auto;
  font-size: 20px;
  padding-left: 5%;
  line-height: 53.5px;
}

.question-list{
  padding-top: 20px;
  width: 100%;
  margin: auto;
  display: flex;
  flex-wrap: wrap;
  margin-top: 20px;
  border-radius: 20px 20px 20px 20px;
  background: linear-gradient(#ebf9fb, white);
}
.question-item{
  position: relative;
  width:50%;
  height: 300rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
}
.question-item image{
  width:90%;
  height: 90%;
  border-radius: 10px 10px 10px 10px;
}
.question-item text{
  width: 90%;
  text-align: center;
  color: white;
  font-size: 36rpx;
  margin-top: 5%;
  position: absolute;
  bottom: 17rpx;
  background-color: #bbb6b671;
  border-radius: 0px 0px 10px 10px;
}